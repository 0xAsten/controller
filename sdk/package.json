{
  "name": "@cartridge/sdk",
  "version": "1.0.0",
  "description": "Cartridge SDK",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf ./dist && BASE_URL=https://cartridge.gg ORIGIN=https://cartridge.gg rollup -c",
    "dev": "BASE_URL=http://localhost:3000 ORIGIN='*' rollup -c -w",
    "prepublishOnly": "yarn test",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test:watch": "jest --watchAll",
    "test": "jest --ci --runInBand"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-replace": "^4.0.0",
    "@types/jest": "^26.0.18",
    "@types/node": "^17.0.23",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "jest": {
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "roots": [
      "src",
      "tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {}
  },
  "dependencies": {
    "starknet": "^3.5.1"
  }
}
